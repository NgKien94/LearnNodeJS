extends ../../layouts/default.pug
include ../../mixins/filter-status.pug
include ../../mixins/search.pug
include ../../mixins/pagination.pug 

//- block extraLink 
//-     link(rel="stylesheet", href="css/test-product.css")

block main
    h1 Danh sách sản phẩm
    .card.mb-3 
        .card-header Bộ lọc và tìm kiếm 
        .card-body
            .row
                .col-6 
                    +filter-status(filterStatus)
                .col-6 
                    +search(keyword)

    .card.mb-3 
        .card-header Danh sách sản phẩm 
        .card-body
            form(
                action=`${prefixAdmin}/products/change-multi?_method=PATCH`
                method="POST"
                form-change-multi
            )
                .d-flex.align-items-start
                    .form-group
                        select(name="type" class="form-control")
                            option(value="active") Hoạt động 
                            option(value="inactive") Dừng hoạt động 
                    .form-group 
                        input(
                            type="text"
                            name="ids"
                            value=""
                            class="form-control d-none"
                        ) 
                    button(type="submit" class="btn btn-primary") Áp dụng 

            table(
                class="table table-bordered table-striped mt-4"
                checkbox-multi
                )
                    thead
                        tr
                            th 
                                input(type="checkbox" name="checkall")
                            th STT
                            th Hình ảnh
                            th Tiêu đề
                            th Giá
                            th Trạng thái
                            th Hành động
                    tbody
                        
                        each item,index in products 
                            tr
                                td 
                                    input(
                                        type="checkbox"
                                        name="id"
                                        value=item.id
                                    )
                                td #{index + 1}
                                td
                                    img(src= item.thumbnail alt=item.title width="100" height="auto")
                                td #{item.title}
                                td #{item.price}$
                                td
                                    if (item.status == "active")
                                        span(
                                            class="badge bg-success"
                                            style="cursor: pointer;"
                                            data-status=item.status
                                            data-id = item.id
                                            button-change-status
                                            ) Hoạt động
                                    else 
                                        span(
                                            class="badge bg-danger"
                                            style="cursor: pointer;"
                                            data-status=item.status
                                            data-id = item.id
                                            button-change-status
                                        ) Dừng hoạt động

                                td
                                    a.btn.btn-warning.text-white(href="#") Sửa
                                    a.btn.btn-danger.text-white.ms-2(href="#") Xóa
    
    +pagination(pagination)
    form(
        action=""
        method="POST"
        data-path=`${prefixAdmin}/products/change-status/`
        id="form-change-status"
        
        ) 

block footerLink 
    script(src="/admin/js/script.js") 
    script(src="/admin/js/product.js")