block main
    h1 Danh sách sản phẩm
    table.table.table-bordered.table-striped.mt-4
            thead
                tr
                    th STT
                    th Hình ảnh
                    th Tiêu đề
                    th Giá
                    th Trạng thái
                    th Hành động
            tbody
                //- Dữ liệu mẫu
                tr
                    td 1
                    td
                        img(src="https://cdn.dummyjson.com/products/images/beauty/Essence%20Mascara%20Lash%20Princess/thumbnail.png" alt="Sản phẩm 1" width="100" height="auto")
                    td Sản phẩm 1
                    td 100$
                    td
                        span.badge.bg-success Hoạt động
                    td
                        a.btn.btn-warning.text-white(href="#") Sửa
                        a.btn.btn-danger.text-white.ms-2(href="#") Xóa
                tr
                    td 2
                    td
                        img(src="https://cdn.dummyjson.com/products/images/beauty/Eyeshadow%20Palette%20with%20Mirror/thumbnail.png" alt="Sản phẩm 2" width="100" height="auto")
                    td Sản phẩm 2
                    td 150$
                    td
                        span.badge.bg-danger Dừng hoạt động
                    td
                        a.btn.btn-warning.text-white(href="#") Sửa
                        a.btn.btn-danger.text-white.ms-2(href="#") Xóa