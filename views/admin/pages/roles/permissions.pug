extends ../../layouts/default.pug
include ../../mixins/alert.pug

block main
    +alert-success(5000)
    +alert-error(5000)

    h1(class="mb-4") Phân quyền

    if(records)
        div(class="text-right")
        button(
        type="submit"
        class="btn btn-primary mb-3"
        button-submit
        ) Cập nhật

    

        table(
            class="table table-hover table-sm"
            table-permissions
        )
            thead
            tr
                th Tính năng
                each item of records 
                    th(class="text-center") #{item.title}
            tbody
                tr
                    td(colspan="4")
                        b Danh mục sản phẩm 
                tr(data-name="products-category_view")
                    td Xem 
                    td(class="text-center")
                        input(type="checkbox")
                    td(class="text-center")
                        input(type="checkbox")
                tr(data-name="products-category_create")
                    td Thêm mới 
                    td(class="text-center")
                        input(type="checkbox")
                    td(class="text-center")
                        input(type="checkbox")
                tr(data-name="products-category_edit")
                    td Chỉnh sửa 
                    td(class="text-center")
                        input(type="checkbox")
                    td(class="text-center")
                        input(type="checkbox")
                tr(data-name="products-category_delete")
                    td Xóa 
                    td(class="text-center")
                        input(type="checkbox")
                    td(class="text-center")
                        input(type="checkbox")
    else 
        a(
            class="btn btn-outline-success"
            href="/admin/roles/create"
            style="display: inline-block;"
        ) Tạo mới nhóm quyền
block footerLink 
    script(src="/admin/js/roles.js") 