mixin search(keyword="")
    form(id="form-search")
        .input-group
            input(
                type="text"
                placeHolder="Nhập từ khóa"
                name="keyword"
                class="form-control"
                style="margin-right: 8px;"
                value= keyword
            )    
            .input-group-append
                button(
                    class="btn btn-success"
                    type="submit"
                ) Tìm 